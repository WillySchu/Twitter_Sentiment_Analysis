extends layout

block content
  .container
    .row.search
      .container
        .col-md-6.col-md-offset-3
          form.text-center(action='/auth/signin' method='POST')
            input.form-control(type='email' name='email' placeholder='Email')
            br
            input.form-control(type='password' name='password' placeholder='Password')
            br
            button.btn.btn-success.form-control(type='submit') Sign in
          br

      h4.text-center.text-muted &#8211;&#8211;&#8211;&nbsp;&nbsp;or&nbsp;&nbsp;&#8211;&#8211;&#8211;
      br
      form.text-center(action='/auth/github' method='GET')
        button.btn.btn-primary(type='submit') Sign in with Github
